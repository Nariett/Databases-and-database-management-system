@page
@model WebApplication1.Pages.Clients.CreateModel
@{
}

<br>
<h2>New Client</h2>

@if(Model.errorMessage.Length > 0){
    <div class='alert alert-warning alert-dismissible fade show' role='alert'>
        <strong>@Model.errorMessage</strong>
        <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Close'></button>
    </div>
}

<form method="POST">
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Имя</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="name" value="@Model.clientInfo.name">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Фамилия</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="surname" value="@Model.clientInfo.surname">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Отчество</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="patronymic" value="@Model.clientInfo.patronymic">
        </div>
    </div>
     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Номер телефона</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="phone" value="@Model.clientInfo.phone">
        </div>
    </div>
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Адрес</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" name="addres" value="@Model.clientInfo.addres">
        </div>
    </div>


    @if (Model.successMessage.Length > 0){
        <div class="row mb-3">
            <div class="col-sm-9">
                <div class='alert alert-success alert-dismissible fade show' role='alert'>
                    <strong>@Model.successMessage</strong>
                    <button type='button' class='btn-close' data-bs-dismiss='alert' aria-label='Закрыть'></button>
                </div>
            </div>
        </div>
    }


    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-3 d-grid">
        <button type="submit" class="btn btn-primary">Подтвердить</button>
        </div>
            <div class="col-sm-3 d-grid">
                <a class="btn btn-outline-primary" href="/" role="button">Отмена</a>
        </div>
    </div>
</form>